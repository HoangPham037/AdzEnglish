<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_140dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:gravity="center"
        android:textColor="@color/blue_02"
        android:textSize="@dimen/_24sp"
        tool:text="Đồ uống " />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/plusjakartasans_regular"
        android:gravity="center"
        android:textColor="@color/gray_01"
        android:textSize="@dimen/_14sp"
        tool:text="Với những từ vựng này, bạn sẽ không chết khát trong suốt kỳ nghỉ hè của mình" />

    <View
        android:layout_width="@dimen/_0_1dp"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_200dp"
        android:layout_gravity="center"
        tool:ignore="ContentDescription"
        tool:src="@drawable/iv_check_yourself" />

    <View
        android:layout_width="@dimen/_0_1dp"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCheckYourself"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:background="@drawable/bg_text_view"
        android:text="@string/txt_check"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_30dp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:text="@string/txt_do_not_open"
        android:textColor="@color/green_01"
        android:textSize="@dimen/_16sp" />

</LinearLayout>