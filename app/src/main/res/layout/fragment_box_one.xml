<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/background_app"
    android:orientation="vertical"
    android:paddingTop="@dimen/_40dp"
    android:paddingBottom="@dimen/_30dp">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvCoin"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/orange"
        android:textSize="@dimen/_18sp"
        android:paddingVertical="@dimen/_10dp"
        android:drawablePadding="@dimen/_10dp"
        android:layout_gravity="end"
        app:drawableEndCompat="@drawable/ic_coin"
        app:layout_constraintBottom_toBottomOf="@+id/ivChest"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="@id/ivChest"
        tool:text="200" />

    <include
        android:id="@+id/menu"
        layout="@layout/item_level_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:gravity="center"
        android:text="@string/txt_open_chest"
        android:textColor="@color/blue_02"
        android:textSize="@dimen/_24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_80dp"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/plusjakartasans_regular"
        android:gravity="center"
        android:text="@string/txt_forecast"
        android:textColor="@color/gray_01"
        android:textSize="@dimen/_14sp" />

    <View
        android:layout_width="@dimen/_0_1dp"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20dp"
        android:src="@drawable/iv_golden_chest" />

    <View
        android:layout_width="@dimen/_0_1dp"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenChest"
        style="@style/button_style"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:background="@drawable/bg_text_view"
        android:text="@string/txt_open_chest1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="@string/txt_do_not_open"
        android:textColor="@color/green_01"
        android:textSize="@dimen/_16sp" />

</LinearLayout>