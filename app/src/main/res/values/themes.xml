<resources xmlns:tools="http://schemas.android.com/tools">a
    <style name="Base.Theme.ADZEnglish" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/my_light_primary</item>
    </style>
    <color name="my_light_primary">#AFAFAF</color>
    <style name="Theme.ADZEnglish" parent="Base.Theme.ADZEnglish" />
    <style name="button_style">
        <item name="android:gravity" >center</item>
        <item name="android:padding" >@dimen/_18dp</item>
        <item name="android:textAllCaps" >false</item>
        <item name="android:textSize" >@dimen/_16sp</item>
        <item name="android:fontFamily" >@font/plusjakartasans_bold</item>
        <item name="android:layout_marginBottom" >@dimen/_30dp</item>
    </style>
    <style name="CustomProgressbar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="height">@dimen/_40dp</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/plusjakartasans_bold</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gray_01</item>
        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@color/blue_02</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TextChoosePartLearn">
        <item name="android:textColor">@color/blue_02</item>
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:background">@drawable/bg_answer</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">70%</item>
        <item name="windowFixedWidthMinor">70%</item>
    </style>
</resources>